@page "/ProductCategory/4"

<PageTitle>Shoes - ShopOnline.Web</PageTitle>

@if (Shoes == null && ErrorMessage == null)
{
    <DisplayLoading LoadingMessage="Loading Shoes" />
}
else if (ErrorMessage != null)
{
    <DisplayError ErrorMessage="@ErrorMessage" />
}
else
{
    <DisplayItemsInCategory Header="Shoes" Products="@Shoes" />
}

