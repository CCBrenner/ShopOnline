@page "/shoes"

<PageTitle>Shoes - ShopOnline.Web</PageTitle>

@if (Shoes == null && ErrorMessage == null)
{
    <DisplayLoading LoadingMessage="Loading Beauty Products" />
}
else if (ErrorMessage != null)
{
    <DisplayError ErrorMessage="@ErrorMessage" />
}
else
{
    <DisplayItemsInCategory Header="Beauty Products" Products="@Shoes" />
}

