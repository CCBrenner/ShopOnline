@page "/ProductCategory/1"

<PageTitle>Beauty - ShopOnline.Web</PageTitle>

@if (BeautyProds == null && ErrorMessage == null)
{
    <DisplayLoading LoadingMessage="Loading Beauty Products" />
}
else if (ErrorMessage != null)
{
    <DisplayError ErrorMessage="@ErrorMessage" />
}
else
{
    <DisplayItemsInCategory Header="Beauty" Products="@BeautyProds" />
}

