
@if (ProductCategories == null && ErrorMessage == null)
{
    <ShopOnline.Web.Pages.DisplayLoading LoadingMessage="" />
}
else if (ErrorMessage != null)
{
    Console.WriteLine(ErrorMessage);
}
else
{
    foreach(var category in ProductCategories)
    {
        var link = $"/ProductCategory/{category.Id}";

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@link">
                <span class="@category.IconCSS" aria-hidden="true"></span> @category.Name
            </NavLink>
        </div>
    }
}

